        <Button x:Name="alk2" Content="2" HorizontalAlignment="Left" Margin="71,100,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:Name="alk3" Content="3" HorizontalAlignment="Left" Margin="71,125,0,0" VerticalAlignment="Top" Width="42"/>
        <DataGrid HorizontalAlignment="Left" Height="240" Margin="126,44,0,0" VerticalAlignment="Top" Width="179"/>
