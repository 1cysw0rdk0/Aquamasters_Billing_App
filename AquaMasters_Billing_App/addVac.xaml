        <Button x:Name="shock3" Content="3" HorizontalAlignment="Left" Margin="10,125,0,0" VerticalAlignment="Top" Width="42"/>
        <Button x:Name="shock4" Content="Case" HorizontalAlignment="Left" Margin="10,150,0,0" VerticalAlignment="Top" Width="42"/>
