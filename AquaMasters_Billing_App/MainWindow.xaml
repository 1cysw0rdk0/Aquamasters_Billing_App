<Window x:Class="AquaMasters_Billing_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaMasters_Billing_App"
        mc:Ignorable="d"
        Title="Billing Sucks Don't It?" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TotalCostTB" HorizontalAlignment="Left" Height="23" Margin="647,371,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120" IsEnabled="False" ToolTip="Total cost to bill" MaxLines="1"/>
        <TextBox x:Name="SubtotalCostTB" HorizontalAlignment="Left" Height="23" Margin="647,343,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120" IsEnabled="False" ToolTip="Total cost before tax" MaxLines="1"/>
        <TextBox x:Name="LaborCostTB" HorizontalAlignment="Left" Height="23" Margin="647,315,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120" IsEnabled="False" ToolTip="Total cost of labor" MaxLines="1"/>
        <TextBox x:Name="PartCostTB" HorizontalAlignment="Left" Height="23" Margin="647,287,0,0" TextWrapping="Wrap" Text="5.00" VerticalAlignment="Top" Width="120" IsEnabled="False" ToolTip="Total cost of parts" MaxLines="1"/>
        <Label Content="Parts:" HorizontalAlignment="Left" Margin="604,283,0,0" VerticalAlignment="Top"/>
        <Label Content="Labor:" HorizontalAlignment="Left" Margin="599,311,0,0" VerticalAlignment="Top"/>
        <Label Content="Subtotal:" HorizontalAlignment="Left" Margin="585,339,0,0" VerticalAlignment="Top"/>
        <Label Content="Total:" HorizontalAlignment="Left" Margin="604,367,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OpeningButton" Content="Opening" HorizontalAlignment="Left" Margin="26,37,0,0" VerticalAlignment="Top" Width="75"/>
        <Label Content="Services" HorizontalAlignment="Left" Margin="42,6,0,0" VerticalAlignment="Top" Width="59"/>
        <Button x:Name="InitialButton" Content="Initial" HorizontalAlignment="Left" Margin="26,62,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="OneCallButton" Content="One Call" HorizontalAlignment="Left" Margin="26,87,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="TwoCallButton" Content="Two Call" HorizontalAlignment="Left" Margin="26,112,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="RepairButton" Content="Plumbing" HorizontalAlignment="Left" Margin="26,137,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="LinerButton" Content="Liner" HorizontalAlignment="Left" Margin="26,162,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="InstallButton" Content="Install" HorizontalAlignment="Left" Margin="26,187,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="InstallButton_Copy" Content="Acid Wash" HorizontalAlignment="Left" Margin="26,212,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="InstallButton_Copy1" Content="Pump Work" HorizontalAlignment="Left" Margin="26,237,0,0" VerticalAlignment="Top" Width="75"/>
        <DataGrid x:Name="dg" HorizontalAlignment="Left" Height="220" Margin="133,37,0,0" VerticalAlignment="Top" Width="342" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Quantity" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn Header="Part or Chem" CanUserSort="False" IsReadOnly="True" Width="205"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Cost per Unit" IsReadOnly="True" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
