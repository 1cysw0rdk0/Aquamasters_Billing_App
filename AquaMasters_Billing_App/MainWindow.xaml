<Window x:Class="AquaMasters_Billing_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AquaMasters_Billing_App"
        mc:Ignorable="d"
        Title="Billing Sucks Don't It?" Height="432.666" Width="707.667">
    <Grid>
        <TextBox x:Name="TotalCostTB" HorizontalAlignment="Left" Height="23" Margin="562,361,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120" IsEnabled="False" ToolTip="Total cost to bill" MaxLines="1"/>
        <TextBox x:Name="SubtotalCostTB" HorizontalAlignment="Left" Height="23" Margin="562,333,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120" IsEnabled="False" ToolTip="Total cost before tax" MaxLines="1"/>
        <TextBox x:Name="LaborCostTB" HorizontalAlignment="Left" Height="23" Margin="562,305,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120" IsEnabled="False" ToolTip="Total cost of labor" MaxLines="1"/>
        <TextBox x:Name="PartCostTB" HorizontalAlignment="Left" Height="23" Margin="562,277,0,0" TextWrapping="Wrap" Text="0.00" VerticalAlignment="Top" Width="120" IsEnabled="False" ToolTip="Total cost of parts" MaxLines="1"/>
        <Label Content="Parts:" HorizontalAlignment="Left" Margin="519,273,0,0" VerticalAlignment="Top"/>
        <Label Content="Labor:" HorizontalAlignment="Left" Margin="514,301,0,0" VerticalAlignment="Top"/>
        <Label Content="Subtotal:" HorizontalAlignment="Left" Margin="500,329,0,0" VerticalAlignment="Top"/>
        <Label Content="Total:" HorizontalAlignment="Left" Margin="519,357,0,0" VerticalAlignment="Top"/>
        <Button x:Name="OpeningButton" Content="Opening" HorizontalAlignment="Left" Margin="10,27,0,0" VerticalAlignment="Top" Width="75" Click="OpeningButton_Click"/>
        <Label Content="Services" HorizontalAlignment="Left" Margin="26,1,0,0" VerticalAlignment="Top" Width="59"/>
        <Button x:Name="InitialButton" Content="Initial" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" Width="75" Click="InitialButton_Click"/>
        <Button x:Name="VacButton" Content="Vac Service" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Width="75" Click="VacButton_Click"/>
        <Button x:Name="RepairButton" Content="Plumbing" HorizontalAlignment="Left" Margin="10,127,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="LinerButton" Content="Liner" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="InstallButton" Content="Install" HorizontalAlignment="Left" Margin="10,177,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="InstallButton_Copy" Content="Acid Wash" HorizontalAlignment="Left" Margin="10,202,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="InstallButton_Copy1" Content="Pump Work" HorizontalAlignment="Left" Margin="10,227,0,0" VerticalAlignment="Top" Width="75"/>
        <DataGrid x:Name="PartsDG" HorizontalAlignment="Left" Height="220" Margin="98,27,0,0" VerticalAlignment="Top" Width="403" AutoGenerateColumns="False" CanUserDeleteRows="False" CanUserAddRows="False"/>
        <DataGrid x:Name="LaborDG" HorizontalAlignment="Left" Height="220" Margin="506,26,0,0" VerticalAlignment="Top" Width="182" RowHeight="20" CanUserAddRows="False" AutoGenerateColumns="False"/>
        <Button x:Name="REMOVE_ME" Content="TEST FUNCTION BUTTON REMOVE PLEASE" HorizontalAlignment="Left" Margin="159,316,0,0" VerticalAlignment="Top" Width="268" Height="67" Click="REMOVE_ME_Click"/>
        <Label Content="Parts &amp; Services" HorizontalAlignment="Left" Margin="252,0,0,0" VerticalAlignment="Top" Width="94"/>
        <Label Content="Labor" HorizontalAlignment="Left" Margin="574,0,0,0" VerticalAlignment="Top" Width="59"/>

    </Grid>
</Window>
